{
  "openapi": "3.0.0",
  "info": {
    "title": "Pet Store API (Multi-File)",
    "version": "1.0.0",
    "description": "Pet store API with external component references"
  },
  "servers": [
    {
      "url": "https://api.petstore.example.com/v1"
    }
  ],
  "security": [
    {
      "bearerAuth": []
    }
  ],
  "paths": {
    "/pets/{petId}": {
      "get": {
        "operationId": "getPet",
        "summary": "Get a pet by ID",
        "parameters": [
          {
            "$ref": "components.json#/parameters/PetIdParam"
          }
        ],
        "responses": {
          "200": {
            "description": "Pet details"
          }
        }
      },
      "put": {
        "operationId": "updatePet",
        "summary": "Update a pet",
        "parameters": [
          {
            "$ref": "components.json#/parameters/PetIdParam"
          }
        ],
        "requestBody": {
          "$ref": "components.json#/requestBodies/PetBody"
        },
        "responses": {
          "200": {
            "description": "Pet updated"
          }
        }
      }
    },
    "/owners/{ownerId}": {
      "get": {
        "operationId": "getOwner",
        "summary": "Get an owner by ID",
        "parameters": [
          {
            "$ref": "components.json#/parameters/OwnerIdParam"
          }
        ],
        "responses": {
          "200": {
            "description": "Owner details"
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}
